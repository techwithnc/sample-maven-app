pipeline{
    agent any
    tools{
        maven '01Maven'
    }
    environment{
        MY_NAME = 'Aung Nyein Chan Oo'
        MY_COMPANY = "WinBrotherGroup"
        TORF = false
    }
    stages{
        stage("Stage01"){
            steps{
                echo "This is Building stage!"
                echo "Current branch is ${env.BRANCH_NAME}"
            }
        }
        stage("Stage02"){
            steps{
                echo "This is Testing stage!"
                echo "This build is created by ${env.MY_NAME}"
                echo "Value of TORF is ${env.TORF}"
            }
        }
        stage("Stage03"){
            when{
                expression{
                    env.TORF == false
                }
            }
            steps{
                echo "This is Deploying stage!"
                echo "He working at ${MY_COMPANY}"
            }
        }
    }
}