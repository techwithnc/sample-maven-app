pipeline{
    agent any
    tools{
        maven '01Maven'
    }
    environment{
        MY_NAME = 'Aung Nyein Chan Oo'
        MY_COMPANY = "WinBrotherGroup"
    }
    parameters {
        booleanParam(name: 'TORF', defaultValue: false, description: '')
        choice(name: 'VERSION', choices: ['1.1.0', '1.2.0', '1.3.0'], description: '')
    }
    stages{
        stage("Stage01"){
            when{
                expression{
                    params.VERSION == '1.1.0'
                }
            }
            steps{
                echo "This is Building stage!"
                echo "This stage is doing on ${params.VERSION}"
                echo "Current branch is ${env.BRANCH_NAME}"
            }
        }
        stage("Stage02"){
            steps{
                echo "This is Testing stage!"
                echo "This build is created by ${env.MY_NAME}"
                echo "Value of TORF is ${params.TORF}"
            }
        }
        stage("Stage03"){
            when{
                expression{
                    params.TORF == true
                }
            }
            steps{
                echo "This is Deploying stage!"
                echo "He working at ${MY_COMPANY}"
            }
        }
    }
}